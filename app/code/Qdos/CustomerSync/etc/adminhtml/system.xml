<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
	<system>
		<!-- <section id="payment">
		</section>
		<section id="carriers" translate="label" type="text" sortOrder="320" showInDefault="1" showInWebsite="1" showInStore="1">
		</section> -->
		<section id="qdosSync" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
			<label>Configuration Crons</label>
			<tab>qdos</tab>
			<resource>Qdos_QdosSync::system_config</resource>
			<group id="autoSyncCustomers" translate="label" type="text" sortOrder="1000" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Sync Customers</label>
				<field id="auto_sync_customers" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable Auto Sync Customers</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				 <field id="frequency" translate="label" type="select" sortOrder="2" showInDefault="1">
					<label>Frequency</label>
					<source_model>Qdos\QdosSync\Model\Config\Source\QdosSyncFrequency</source_model>
					<backend_model>Qdos\CustomerSync\Model\Config\CustomersCronConfig</backend_model>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>
					</depends>
				</field>
				<field id="weekdays" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Weekdays Days</label>
					<source_model>Magento\Config\Model\Config\Source\Locale\Weekdays</source_model>
					<depends>
						<field id="qdosSync/autoSyncCustomers/frequency">W</field>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>
					</depends>
				</field>
				<field id="daysofmonth" translate="label" type="select" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Days on Month</label>
					<source_model>Qdos\QdosSync\Model\Config\Source\QdosSyncDaysofMonth</source_model>
					<depends>
						<field id="qdosSync/autoSyncCustomers/frequency">M</field>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>
					</depends>
				</field>
				<field id="time" translate="label" type="time" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0">
					<label>Start Time</label>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>
					</depends>
				</field>
				<field id="add_new_sync_customers_schedule" translate="label" type="select" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Add new schedule</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>
					</depends>
				</field>
				<field id="time2" translate="label" type="time" sortOrder="9" showInDefault="1" showInWebsite="0" showInStore="0">
					<label>Start Time</label>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>
						<field id="qdosSync/autoSyncCustomers/add_new_sync_customers_schedule">1</field>
					</depends>
				</field>
				<field id="add_another_new_sync_customers_schedule" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Add new schedule</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>
						<field id="qdosSync/autoSyncCustomers/add_new_sync_customers_schedule">1</field>
					</depends>
				</field>
				<field id="time3" translate="label" type="time" sortOrder="11" showInDefault="1" showInWebsite="0" showInStore="0">
					<label>Start Time</label>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>			
						<field id="qdosSync/autoSyncCustomers/add_new_sync_customers_schedule">1</field>
						<field id="qdosSync/autoSyncCustomers/add_another_new_sync_customers_schedule">1</field>
					</depends>
				</field>
				<field id="add_another_new_one_sync_customers_schedule" translate="label" type="select" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Add new schedule</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>
						<field id="qdosSync/autoSyncCustomers/add_new_sync_customers_schedule">1</field>
						<field id="qdosSync/autoSyncCustomers/add_another_new_sync_customers_schedule">1</field>
					</depends>
				</field>
				<field id="time4" translate="label" type="time" sortOrder="13" showInDefault="1" showInWebsite="0" showInStore="0">
					<label>Start Time</label>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>		
						<field id="qdosSync/autoSyncCustomers/add_new_sync_customers_schedule">1</field>
						<field id="qdosSync/autoSyncCustomers/add_another_new_sync_customers_schedule">1</field>
						<field id="qdosSync/autoSyncCustomers/add_another_new_one_sync_customers_schedule">1</field>
						
					</depends>
				</field>
					<field id="add_another_new_two_sync_customers_schedule" translate="label" type="select" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Add new schedule</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>
						<field id="qdosSync/autoSyncCustomers/add_another_new_sync_customers_schedule">1</field>
						<field id="qdosSync/autoSyncCustomers/add_new_sync_customers_schedule">1</field>
						<field id="qdosSync/autoSyncCustomers/add_another_new_one_sync_customers_schedule">1</field>
					</depends>
				</field>
				<field id="time5" translate="label" type="time" sortOrder="15" showInDefault="1" showInWebsite="0" showInStore="0">
					<label>Start Time</label>
					<depends>
						<field id="qdosSync/autoSyncCustomers/auto_sync_customers">1</field>		
						<field id="qdosSync/autoSyncCustomers/add_new_sync_customers_schedule">1</field>
						<field id="qdosSync/autoSyncCustomers/add_another_new_sync_customers_schedule">1</field>
						<field id="qdosSync/autoSyncCustomers/add_another_new_one_sync_customers_schedule">1</field>
						<field id="qdosSync/autoSyncCustomers/add_another_new_two_sync_customers_schedule">1</field>
					</depends>
				</field>
			</group>
		</section>
		<section id="qdosConfig" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
		    <label>Configuration Settings</label>
		    <tab>qdos</tab>
		    <resource>Qdos_QdosSync::system_config</resource>

		  <group id="permissions" translate="label" type="text" sortOrder="24" showInDefault="1" showInWebsite="1" showInStore="1">
		  	<field id="customer_manual_sync" translate="label" type="select" sortOrder="18" showInDefault="1">
				    <label>Enable Customer Sync</label>				    
				    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>

				<field id="customer_group_manual_sync" translate="label" type="select" sortOrder="19" showInDefault="1">
				    <label>Enable Customer Group Sync</label>				    
				    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
		</group>
	</section>

	</system>
</config>